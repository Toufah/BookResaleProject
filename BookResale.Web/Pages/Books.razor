@page "/"
@inherits BooksBase

@if(Books == null)
{
    <h3>Loading Books ...</h3>
}
else
{
    <h3 class="mb-5">Books</h3>

    var booksCount = Books.Count();

    @if(booksCount > 0)
    {
        const int booksPerRow = 4;
        var booksRowList = new List<BookDto>();

        @for(int i = 0; i < booksPerRow; i++)
        {
            booksRowList = Books.Skip(i * booksPerRow).Take(booksPerRow).ToList();

            <div class="row mt-3">
                @foreach(var book in booksRowList)
                {
                    <div class="col-md-3 mb-2">
                        <a href="#">
                            <div class="card">
                                <img class="img-thumbnail" src="@book.ImageURL">
                                <div class="card-body">
                                    <h5 class="card-title mb-3">
                                        @book.Title;
                                    </h5>
                                    <p class="card-text">
                                        <b>@book.Price.ToString("C")</b>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }

    }
}
