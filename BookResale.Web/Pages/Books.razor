                            @foreach (var book in booksRowList)
                            {
                                if (counter < 5)
                                {
                                    <a href="#">
                                        <div class="img-cont">
                                            <img class="image-thumbnail" src="@book.ImageURL" />
                                        </div>
                                        <div class="card-body">
                                            <h6>@book.Title</h6>
                                            <p><span>$</span>@book.Price</p>
                                        </div>
                                    </a>
                                    counter++;
                                }
                            }

                        }
                    </div>
                }
            </div>
            @*End self-help*@
            @*Start recommended*@

            <div>
                <a href="#" class="ct-title">New Arrivals</a>

                @if (Books.Count() > 0)
                {
                    var booksCount = Books.Count();
